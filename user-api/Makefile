# User API Makefile

# Variables
BINARY_NAME=user-api
MAIN_FILE=main.go
PORT=8080

# Default target
.PHONY: help
help: ## Show this help message
	@echo "Available commands:"
	@grep -E '^[a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | sort | awk 'BEGIN {FS = ":.*?## "}; {printf "\033[36m%-20s\033[0m %s\n", $$1, $$2}'

.PHONY: dev
dev: ## Setup dependencies and run the application in development mode
	@echo "ğŸš€ Setting up and running User API in development mode..."
	@echo "ğŸ“¦ Installing dependencies..."
	@go mod tidy
	@echo "ğŸ”§ Starting server on port $(PORT)..."
	@echo "ğŸ“ API will be available at: http://localhost:$(PORT)"
	@echo "ğŸ” Health check: http://localhost:$(PORT)/health"
	@echo ""
	@go run $(MAIN_FILE)

.PHONY: build
build: ## Build the application
	@echo "ğŸ”¨ Building $(BINARY_NAME)..."
	@go build -o $(BINARY_NAME) $(MAIN_FILE)
	@echo "âœ… Build complete: ./$(BINARY_NAME)"

.PHONY: run
run: ## Run the built application
	@echo "ğŸš€ Running $(BINARY_NAME)..."
	@./$(BINARY_NAME)

.PHONY: clean
clean: ## Clean build artifacts
	@echo "ğŸ§¹ Cleaning build artifacts..."
	@rm -f $(BINARY_NAME)
	@go clean -modcache
	@echo "âœ… Clean complete"

.PHONY: test
test: ## Run tests
	@echo "ğŸ§ª Running tests..."
	@go test -v ./...

.PHONY: deps
deps: ## Install dependencies
	@echo "ğŸ“¦ Installing dependencies..."
	@go mod tidy
	@echo "âœ… Dependencies installed"

.PHONY: install-air
install-air: ## Install air for hot reloading
	@echo "ğŸ“¦ Installing air for hot reloading..."
	@go install github.com/cosmtrek/air@latest
	@echo "âœ… Air installed"

.PHONY: dev-air
dev-air: deps ## Run with air for hot reloading (requires air to be installed)
	@echo "ğŸ”¥ Starting with hot reloading..."
	@echo "ğŸ“ API will be available at: http://localhost:$(PORT)"
	@air

.PHONY: check
check: ## Check if Go is installed
	@echo "ğŸ” Checking Go installation..."
	@go version || (echo "âŒ Go is not installed. Please install Go from https://golang.org/dl/" && exit 1)
	@echo "âœ… Go is installed"

.PHONY: setup
setup: check deps ## Complete setup (check Go, install deps)
	@echo "âœ… Setup complete! Run 'make dev' to start the server" 